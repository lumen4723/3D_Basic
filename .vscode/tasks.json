{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "디버그 빌드",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\main.exe",
                "-std=c++23",
                "-I${fileDirname}\\include",
                "-I${fileDirname}\\Vulkan\\include",
                "-L${fileDirname}\\lib",
                "-L${fileDirname}\\Vulkan\\lib",
                "-lglfw3",
                "-lvulkan-1",
                "-lgdi32"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거를 위한 빌드입니다, 릴리즈 빌드는 README.md를 참고하세요."
        }
    ],
    "version": "2.0.0"
}
